<div class="container">
	<% if @user.errors.any? %>
    <div id="error_explanation">
      <h4>【 error 】</h4>
	    <ul>
		  <% @user.errors.full_messages.each do |message| %>
		    <li><%= message %></li>
		    <% end %>
		</ul>
	</div>
  <% end %>
  <h2>User info</h2>
  <%= form_for(@user) do |f| %>

    <div class="field">
	  <label for="user_name">Name</label>
	    <br>
		<%= f.text_field :name, placeholder:"名前"%>
	</div>
	<div class="field">
		<label for="user_image">Image</label>
		<%= f.attachment_field :profile_image %>
	</div>
	<div class="field">
		<label for="user_introduction">Introduction</label>
		<br>
		<%= f.text_area :introduction, placeholder:"自己紹介文"%>
		<br>
		<br>
	</div>

	<div class="actions">
		<br>
		<%= f.submit "Update User" %>
	</div>
  <% end %>
</div>